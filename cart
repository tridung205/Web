    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script>
        // Product prices (Unit: VND)
        const PRICES = {
            1: 135000, // Snake Plant
            2: 180000  // Money Tree
        };
        const DISCOUNT = 15000;

        function formatCurrency(amount) {
            return amount.toLocaleString('vi-VN') + 'â‚«';
        }

        function updateQuantity(itemId, change) {
            const quantityInput = document.getElementById(`qty-${itemId}`);
            let currentQuantity = parseInt(quantityInput.value);
            let newQuantity = currentQuantity + change;
            
            if (newQuantity >= 1) {
                quantityInput.value = newQuantity;
                updateItemTotal(itemId, newQuantity);
                updateCartSummary();
            }
        }

        function updateItemTotal(itemId, quantity) {
            const price = PRICES[itemId];
            const total = price * quantity;
            document.getElementById(`total-${itemId}`).textContent = formatCurrency(total);
        }

        function updateCartSummary() {
            let subtotal = 0;
            // Assuming 2 products
            subtotal += PRICES[1] * parseInt(document.getElementById('qty-1').value);
            subtotal += PRICES[2] * parseInt(document.getElementById('qty-2').value);

            const grandTotal = subtotal - DISCOUNT;

            document.getElementById('subtotal').textContent = formatCurrency(subtotal);
            document.getElementById('grand-total').textContent = formatCurrency(grandTotal);
        }
        
        function removeItem(itemId) {
            alert(`Removing item ${itemId} from cart (Mock function)`);
            // In reality, you would remove the HTML element for this product
        }

        function clearCart() {
             alert("All items cleared from cart (Mock function)");
             // In reality, you would remove all cart-item elements
             // and update the summary to 0
        }

        function checkout() {
            alert("Proceeding to Checkout. Redirecting to Order page (Mock function)");
        }
        
        // Initialize total when page loads
        document.addEventListener('DOMContentLoaded', updateCartSummary);
    </script>

